<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ControlsDemo.LoginPage" BackgroundImage="BackImage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="30,0,30,0" Spacing="10">
            <Label Text="Login" FontSize="30" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtUserName" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HorizontalTextAlignment="Start" Placeholder="Enter UserName" />
            <Entry x:Name="txtPassword" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HorizontalTextAlignment="Start" IsPassword="true"  Placeholder="Enter Password"/>
            <Button Text="Submit" TextColor="White" BackgroundColor="Blue" HorizontalOptions="Center" VerticalOptions="FillAndExpand" HeightRequest="50" WidthRequest="150" Clicked="LoginTapped" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>